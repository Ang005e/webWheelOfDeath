@model webWheelOfDeath.Models.ViewModels.CredentialsViewModel;


@*
    This is a partial view for the login form.
    It is included in the main view (Index.cshtml) using the following syntax:
    @Html.Partial("_LoginPartial", Model)
    The model passed to this partial view should be of type CCredentials.

    ToDo:
    inside the _Login partial view, check if the user just failed a login (Request.Form["txtLoginUsername"].ToString()). If so, 
*@ 

<!-- <div id="modal-login-id" class="modal-canvas hidden"> this section should be OUTSIDE the partial -->
<div class="main-panel modal-player">
    <span class="close-popup">&#10006;</span>
    <form method="post" asp-controller="@ViewData["Controller"]" asp-action="Login">
        <fieldset>
            <legend>Do You Have What It Takes?</legend>

            <fieldset class="borderless">
                <label asp-for="Username">Username:</label>
                <input type="text"
                        asp-for="Username"
                       id="txtPlayerLoginUsername"
                        placeholder="[Enter Username]"
                        required="required" />
            </fieldset>


            <fieldset class="borderless">
                <label asp-for="Password">Password:</label>
                <input type="text"
                        asp-for="Password"
                       id="txtPlayerLoginPassword"
                        placeholder="[Enter Password]"
                        required="required" />
            </fieldset>

            <button type="button" name="btnCreateAccount" class="ornate">Create Account</button>
            <button type="submit" name="btnLogin" class="ornate">Log In</button>
        </fieldset>
    </form>
</div>
