@model webWheelOfDeath.Models.ViewModels.AccountViewModel;

<div class="main-panel modal-player">
    <span class="close-popup">&#10006;</span>
    <form method="post" asp-controller="@Context.Session.GetString("controller")" asp-action="Register">
        <fieldset>
            <legend>Do You Have What It Takes?</legend>

            <fieldset class="borderless">
                <label for="FirstName">First Name:</label>
                <input type="text"
                       asp-for="FirstName"
                       placeholder="[Enter First Name]"
                       required="required" />
            </fieldset>


            <fieldset class="borderless">
                <label for="LastName">Last Name:</label>
                <input type="text"
                       asp-for="LastName"
                       placeholder="[Enter Last Name]"
                       required="required" />
            </fieldset>

            <fieldset class="borderless">
                <label for="Username">Username:</label>
                <input type="text"
                       asp-for="Username"
                       placeholder="[Enter Username]"
                       required="required" />
            </fieldset>

            <fieldset class="borderless">
                <label for="Password">Password:</label>
                <input type="password"
                       asp-for="Password"
                       placeholder="[Enter Password]"
                       required="required" />
            </fieldset>

            <!-- ############## ToDo: add a confirm button ################## -->
            <button type="submit" name="btnConfirm" class="ornate">Confirm</button>
        </fieldset>
    </form>
</div>

