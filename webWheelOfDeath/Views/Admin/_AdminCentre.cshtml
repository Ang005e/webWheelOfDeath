@{
    string lastUserAction = (string?)TempData["LastUserAction"] ?? "";
	bool lastActionSuccess = (bool?)TempData["LastActionSuccess"] ?? false;
}
@* User Feedback from last user administration action. Hidden if there's no feedback to be given.*@
<div class=".alert @(string.IsNullOrEmpty(lastUserAction) ? "hidden" : ".alert.show")
    @(lastActionSuccess == true ? ".alert.success" : ".alert.fail")">
    
	<p>@lastUserAction</p>  

</div>

<fieldset>

    <button type="button" id="btnCreateAccount">Create an Admin Account</button>

    <button type="button" id="btnCreateGame">Create a Gamemode</button>
    
    <button type="button" id="btnManageGames">Activate/Deactivate Gamemodes</button>

</fieldset>

<script defer="defer" type="module">
    import { partialLoader } from "/js/partialLoader.js";
    $(document).ready(() => {

        document.getElementById("btnCreateAccount").addEventListener('click', () => {
            partialLoader(null, "/Admin/CreateAdminAccount", "#page-content", "", false);
        });

        document.getElementById("btnCreateGame").addEventListener('click', () => {
        partialLoader(null, "/Admin/CreateGame", "#page-content", "", false);
        });

        document.getElementById("btnManageGames").addEventListener('click', () => {
        partialLoader(null, "/Admin/ManageGames", "#page-content", "", false);
        });

    })
</script>


