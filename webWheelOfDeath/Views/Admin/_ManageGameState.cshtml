@model webWheelOfDeath.Models.CWebGame

<h4>CWebGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form data-ajax-form asp-action="ToggleGameActive">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group disabled">
                <label asp-for="Game" class="control-label"></label>
                <input asp-for="Game" class="form-control disabled" />
                <span asp-validation-for="Game" class="text-danger disabled">@Model.Game</span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActiveFlag" /> @Html.DisplayNameFor(model => model.IsActiveFlag)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
	<a ajax-action="ManageGameState">Back to List</a>
</div>

