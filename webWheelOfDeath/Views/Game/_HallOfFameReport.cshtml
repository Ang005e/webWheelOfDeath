@model IEnumerable<webWheelOfDeath.Models.CHallOfFame>

<p>
    <a asp-action="Index">Back</a>
    @if (!ViewBag.IsHallOfFameAsc)
    {
        <a asp-action="HallOfFameLow" id="lnkHofLow">Slowest Times</a>
        <script>
            $(document).on("click", "#lnkHofLow", function (event) {
                event.preventDefault();
                var formData = $(this).serialize()
                partialLoader(formData, "/Game/HallOfFameLow", "#page-content", "login-form", true);
            });
        </script>
    }
	else
	{
        <a asp-action="HallOfFameHigh" id="lnkHofHigh">Fastest Times</a>
        <script>
            $(document).on("click", "#lnkHofHigh", function (event) {
                event.preventDefault();
                var formData = $(this).serialize()
                partialLoader(formData, "/Game/HallOfFameHigh", "#page-content", "login-form", true);
            });
        </script>
    }

</p> 
<table class="table report main-panel">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElapsedTime)
            </th>
